{
    "name": "@slimio/openapi",
    "version": "0.1.0",
    "description": "OpenAPI implementation",
    "main": "index.js",
    "scripts": {
        "prepublishOnly": "pkg-ok",
        "test": "cross-env psp && ava --verbose",
        "doc": "jsdoc -c ./jsdoc.json -r -R ./README.md -P ./package.json --verbose",
        "coverage": "nyc npm test",
        "report": "nyc report --reporter=html"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SlimIO/OpenAPI.git"
    },
    "keywords": [
        "SlimIO",
        "OpenAPI",
        "swagger",
        "api",
        "spec",
        "descriptor",
        "api"
    ],
    "files": [
        "index.js",
        "index.d.ts",
        "src/*.js"
    ],
    "author": "SlimIO",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/SlimIO/OpenAPI/issues"
    },
    "homepage": "https://github.com/SlimIO/OpenAPI#readme",
    "dependencies": {
        "@slimio/arg-checker": "^0.2.1",
        "@slimio/is": "^1.5.0",
        "email-validator": "^2.0.4",
        "semver": "^6.1.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.2.0",
        "@commitlint/config-conventional": "^8.2.0",
        "@escommunity/minami": "^1.0.0",
        "@slimio/eslint-config": "^4.0.0",
        "@slimio/psp": "^0.9.2",
        "ava": "^2.4.0",
        "cross-env": "^7.0.1",
        "eslint": "^6.6.0",
        "husky": "^3.0.9",
        "jsdoc": "^3.6.2",
        "nyc": "^14.1.1",
        "pkg-ok": "^2.3.1"
    },
    "engines": {
        "node": ">=12"
    },
    "husky": {
        "hooks": {
            "pre-push": "cross-env eslint src/** && npm test",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "nyc": {
        "check-coverage": true,
        "per-file": false,
        "lines": 98,
        "statements": 98,
        "functions": 98,
        "branches": 90
    }
}
